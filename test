class Ю extends Function {
    #name: string;
    #call(...args) {
        console.log(this.#name, args);
    }
    constructo(name: string) {
        super();
        this.#name = name;
        return new Proxy (
            this,
            {
                apply: (target, _, args) => target.call(...args)
            }
        );
    }
    get tag() {
        return new Ю ( `${ this.#name }->tag` );
    }
}

const ю = new Ю ( 'ю' );

const test1 = ю`template ${1}`;
const test2 = ю(2)`template ${2}`;
